program main
  implicit none
  integer, parameter :: n=8
  real :: a(n), b(n)
  real, device :: a_d(n), b_d(n)
  integer :: i

  !$cuf kernel do <<<*,*>>> 
  do i = 1, n
     a_d(i) = i+1
  enddo

  !$cuf kernel do <<<*,*>>>
  do i = 1, n
     b_d(i) = a_d(i)+1
  enddo

  a = a_d; b = b_d
  
  print *, a
  print *, b
end program main


