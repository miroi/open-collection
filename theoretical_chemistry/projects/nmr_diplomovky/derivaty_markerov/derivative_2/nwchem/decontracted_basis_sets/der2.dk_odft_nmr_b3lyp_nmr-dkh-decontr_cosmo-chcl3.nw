echo

start molecule
memory total 40 gb

#print low

title "der2"
charge 0

geometry units angstroms print xyz autosym
 # load format xyz der1.pbe0_tz2p_good_cosmo-chcl3_optimized_geom.xyz
  load format xyz der2.geopt_freq_nmr_pbe0_tz2p_good_cosmo-chcl3_converged_geometry.xyz
end

# spinfree DK2
relativistic
   douglas-kroll
end

# decontracted basis set
basis  "ao basis"  spherical
  * library NMR-DKH (TZ2P) file H_C_O_P.nmr-dkh-decontr.bas
end

dft
  odft # for spinspin coupling
  direct
  grid fine
  xc b3lyp
  mult 1
# Reduce output during geometry optimization
#  noprint "final vectors analysis"
end

property
  giao
  shielding 1  2
  spinspin  3  2 23 2 30 2 31
end

cosmo
  solvent chcl3
end

#task dft energy
task dft property
