#!/bin/bash

#SBATCH -J GMScompile

##  partition (queue)
##SBATCH -p cascade
##SBATCH -p flnr-ice
#SBATCH -p flnr-sod
##SBATCH -p slo-ice

## max. execution time
##SBATCH -t 7-00:00:00
#SBATCH -t 0-04:00:00

#SBATCH --mem=32GB

# do not restart in the case of nodefail!
#SBATCH --no-requeue
#SBATCH --no-kill

#SBATCH -N 1 -n 4
#SBATCH  --sockets-per-node=1

#SBATCH -o log_slurm_job.%j.%N.std_out

echo Job user is $SLURM_JOB_USER and his job $SLURM_JOB_NAME has assigned ID $SLURM_JOBID
echo This job was submitted from the computer $SLURM_SUBMIT_HOST
echo and from the home directory:
echo $SLURM_SUBMIT_DIR
echo
echo It is running on the cluster compute node:
echo $SLURM_CLUSTER_NAME
echo and is employing $SLURM_JOB_NUM_NODES node/nodes:
echo $SLURM_JOB_NODELIST
echo
echo -e "Job partition is $SLURM_JOB_PARTITION \n"
echo The job requests $SLURM_CPUS_ON_NODE CPU per task.

#echo "modules at disposal:"
#module avail
#echo

#
module purge
#module load openmpi/v2.1.2-2
module add GVR/v1.0-1
module add Python/v3.10.13
module add intel/oneapi 

echo -e "\n\n loaded modules:"
module list

ulimit -s unlimited


GAMESSUS_DIR=/zfs/scratch/HybriLITWorkshop2025/milias/software/gamess-us/gamess
#MOPACDIR=/lustre/home/user/m/milias/work/software/mopac/git_cloned/install/bin

#echo -e "\n ldd $MOPACDIR/mopac :"
#ldd $MOPACDIR/mopac

cd $GAMESSUS_DIR
echo -e "\n I am in directory GAMESSUS_DIR=$GAMESSUS_DIR \c"; pwd

echo -e "\n launching make -j $SLURM_CPUS_ON_NODE  :"
make -j $SLURM_CPUS_ON_NODE

exit
