  export NWCHEM_TOP=/zfs/scratch/HybriLITWorkshop2025/milias/software/nwchem/packaged
  echo -e "\n NWCHEM_TOP=$NWCHEM_TOP"

  cd $NWCHEM_TOP
  ls -lt $NWCHEM_TOP

  #tar -xjf nwchem-7.3.1-release.revision-23c3b41b-nonsrconly.2025-11-06.tar.bz2
