echo -e "\n\n Going to run ctest : "
ctest -VV

echo -e "\n\n Going to run make install into INSTALL_DIR=$INSTALL_DIR : "
make install

echo -e "\n\n Check of content of the INSTALL_DIR=$INSTALL_DIR :"
