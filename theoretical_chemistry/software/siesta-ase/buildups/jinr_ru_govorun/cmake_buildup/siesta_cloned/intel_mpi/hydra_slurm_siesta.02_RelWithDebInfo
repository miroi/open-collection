echo -e "\nI am in the directory SIESTA=$SIESTA; verify via pwd=";pwd

if [ -d "$BUILD" ]; then
  echo -e "\nDirectory '$BUILD' exists. Removing it..."
  rm -rf "$BUILD"
else
  echo -e "\nDirectory '$BUILD' does not exist - will be created by CMake."
fi


