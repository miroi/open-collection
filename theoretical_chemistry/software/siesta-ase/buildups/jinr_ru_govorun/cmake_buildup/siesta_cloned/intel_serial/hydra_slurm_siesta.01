#!/bin/bash

#SBATCH -J SIESTA

##  partition (queue)
##SBATCH -p cascade
##SBATCH -p flnr-ice
#SBATCH -p flnr-sod
##SBATCH -p knl


## max. execution time
##SBATCH -t 7-00:00:00
