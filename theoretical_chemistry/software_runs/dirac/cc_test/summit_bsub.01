# number of MPI processes (2*nnodes)
export nmpi=400

# dirac setup
export DIRAC_PATH=/gpfs/alpine/world-shared/chp109/dirac_install
export BASDIR=${DIRAC_PATH}/basis:${DIRAC_PATH}/basis_dalton:${DIRAC_PATH}/basis_ecp
source ~/.modules

# project setup
export ProjectDir=/ccs/home/gomes/projects/grands-challenges/uo2no33-
export inpdir=$ProjectDir/inp
export xyzdir=$ProjectDir/xyz
export outdir=$ProjectDir/out/v2z-summit-lp64/ccsd_x2c_energy+lambda_exacorr_scheme4_block60_-4500to5_v2z
export datadir=$ProjectDir/data/v2z-rome-lp64/scf_x2c_properties_v2z

export MOL_file=$xyzdir/Rb_uo2_3no3-Barclay-AC1965-19-205.xyz
export INP_file=$inpdir/ccsd_x2c_energy+lambda_exacorr_scheme4_block60_-4500to5_v2z.inp
#
export DIRAC_TMPDIR=${MEMBERWORK}/chp109/uo2no33-_x2c_v2z_scheme4_block60_-4500to5
#

# now running
mkdir -p $outdir
cd $outdir
# run exacorr
${DIRAC_PATH}/pam --keep_scratch --scratchfull=$DIRAC_TMPDIR --mpi=$nmpi --mol=$MOL_file --inp=$INP_file --outqforce --put="$datadir/DFCOEF $datadir/AOMOMAT" --get "CCDENS"
